{
  "name": "solital/solital",
  "description": "Solital is a framework for php projects. Contains a route system, template, ORM and API",
  "license": "MIT",
  "homepage": "https://solital.github.io/docs-v1/",
  "keywords": [
    "framework",
    "php",
    "framework-php",
    "psr-16",
    "orm",
    "api-rest"
  ],
  "require": {
    "php": ">= 7.2",
    "solital/core": "1.1.*",
    "solital/katrina": "1.1.*"
  },
  "require-dev": {
    "monolog/monolog": "2.*",
    "phpunit/phpunit": "^8"
  },
  "autoload": {
    "psr-4": {
      "Solital\\": "app/"
    },
    "files": [
      "app/Functions/components.php",
      "app/Functions/helpers.php"
    ]
  },
  "scripts": {
    "post-create-project-cmd": [
      "composer dump-autoload -o"
    ],
    "post-install-cmd": [
      "composer dump-autoload -o"
    ],
    "post-update-cmd": [
      "composer dump-autoload -o"
    ]
  }
}