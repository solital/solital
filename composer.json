{
    "name": "solital/solital",
    "description": "Solital is a framework designed for those who need to create projects quickly and with an easy syntax",
    "license": "MIT",
    "homepage": "https://solital.github.io/site/",
    "version": "4.0.3",
    "keywords": [
        "framework",
        "php",
        "framework-php",
        "psr-16",
        "psr-14",
        "psr-11",
        "psr-4",
        "orm",
        "api-rest",
        "solital-framework",
        "solital",
        "orm-php-framework"
    ],
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "ext-pdo": "*",
        "solital/core": "4.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10"
    },
    "autoload": {
        "psr-4": {
            "Solital\\": "app/"
        },
        "files": [
            "config.php"
        ]
    },
    "scripts": {
        "post-create-project-cmd": [
            "composer dump-autoload -o",
            "php vinci generate:hash"
        ],
        "post-install-cmd": [
            "composer dump-autoload -o",
            "php vinci generate:files"
        ],
        "post-update-cmd": [
            "composer dump-autoload -o",
            "php vinci generate:files"
        ]
    },
    "config": {
        "optimize-autoloader": true
    }
}